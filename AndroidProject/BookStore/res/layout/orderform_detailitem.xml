<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="5dip" >

    <LinearLayout
        android:id="@+id/orderform_detailinfo_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/list_orderformdetail_img"
            android:layout_width="50dip"
            android:layout_height="50dip" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_orderform_bookname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/orderform_detailinfo_layout"
        android:layout_toRightOf="@id/orderform_detailinfo_layout"
        android:text="Rihanna"
        android:textColor="#040404"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/tv_orderform_bookprice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_orderform_bookname"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@id/orderform_detailinfo_layout"
        android:text="Just"
        android:textColor="#343434"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_orderform_bookcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_orderform_bookname"
        android:layout_marginRight="5dip"
        android:gravity="right"
        android:text="count"
        android:textColor="#10bcc9"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_orderform_booktotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_orderform_bookprice"
        android:layout_alignBottom="@+id/tv_orderform_bookprice"
        android:layout_alignRight="@+id/tv_orderform_bookcount"
        android:gravity="right"
        android:text="total"
        android:textColor="#10bcc9"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>