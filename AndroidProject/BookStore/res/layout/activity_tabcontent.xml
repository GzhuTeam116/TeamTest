<?xml version="1.0" encoding="UTF-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/contentdilplay_LinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:background="@drawable/tabhost_bg"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/contentdilplay_LinearLayout_ImageView0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/selector_home" />

            <ImageView
                android:id="@+id/contentdilplay_LinearLayout_ImageView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/selector_search" />

            <ImageView
                android:id="@+id/contentdilplay_LinearLayout_ImageView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/selector_shopcart" />

            <ImageView
                android:id="@+id/contentdilplay_LinearLayout_ImageView3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/selector_myself" />
        </LinearLayout>
    </LinearLayout>

</TabHost>