<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/navigation_path_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navigation_path" />

    <TextView
        android:id="@+id/navigation_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/navigation_path_title"
        android:layout_below="@+id/navigation_path_title" />

    <TextView
        android:id="@+id/current_position_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/navigation_path"
        android:layout_marginTop="73dp"
        android:text="@string/current_position" />

    <TextView
        android:id="@+id/current_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/current_position_title"
        android:layout_below="@+id/current_position_title" />

</RelativeLayout>
